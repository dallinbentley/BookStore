@{
    ViewData["Title"] = "Books";
}

@model IQueryable<Book>

<div class="text-center">
    <table>
        <thead>
            <tr><th>Book ID</th><th>Title</th><th>Author</th><th>Publisher</th><th>ISBN</th><th>Classification</th><th>Category</th><th>Price</th></tr>
        </thead>
        <tbody>
            <!--Cycles through all of the seed data in Books db-->
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.BookId</td>
                <td>@x.Title</td>
                <td>@x.AuthorFirst @x.AuthorMiddle @x.AuthorLast</td>
                <td>@x.AuthorLast</td>
                <td>@x.Publisher</td>
                <td>@x.ISBN</td>
                <td>@x.Classification</td>
                <td>@x.Category</td>
                <td>$@x.Price</td>

            </tr>
            }
        </tbody>  
    </table>
</div>
